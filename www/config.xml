<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "co.mightydeals.app"
        versionCode="10"
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Mighty Deals</name>

    <description>Mighty Deals Phonegap Application</description>

    <author href="" email="">Money Expert</author>

	<!-- Options -->
	<preference name="orientation" value="portrait" />
	<preference name="target-device" value="universal" />
	<preference name="fullscreen" value="true" />
	
	<!-- iOS only -->
	<preference name="webviewbounce" value="false" />
	<preference name="detect-data-types" value="false" />
	<preference name="show-splash-screen-spinner" value="false" />
	<preference name="exit-on-suspend" value="false" />
	
	<!-- iOS Plugins -->
	<!-- <plugin name="Geolocation" value="CDVLocation" /> -->
	<!-- <feature name="http://api.phonegap.com/1.0/geolocation"/> -->
	
	<!-- Android Plugins -->
	<!-- <plugin name="Geolocation" value="org.apache.cordova.GeoBroker" /> -->

	<!-- Icons -->
	<icon src="res/icon/icon-57-2x.png" />
	
	<!-- iOS -->
	<icon src="res/icon/ios/icon.png" gap:platform="ios" width="57" height="57" />
	<icon src="res/icon/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="res/icon/ios/icon@2x.png" gap:platform="ios" width="114" height="114" />

	<!-- retina iPad support: PhoneGap 2.5.0+ only -->
	<icon src="res/icon/ios/icon-72-2x.png" gap:platform="ios" width="144" height="144" />


	<!-- Android -->
	<icon src="res/icon/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
	<icon src="res/icon/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
	<icon src="res/icon/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
	<icon src="res/icon/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />


	<!-- Blackberry -->
	<icon src="res/icon/bb/icon.png" gap:platform="blackberry" />
	<icon src="res/icon/bb/icon_hover.png" gap:platform="blackberry" gap:state="hover"/>

	<!-- WebOS -->
	<icon src="res/icon/webos/icon.png" gap:platform="webos" />
	<icon src="res/icon/webos/miniicon.png" gap:platform="webos" gap:role="mini" />
	
	<!-- Splash Screen -->
	
	<gap:splash src="splash.png" />
	
	<!-- iOS Splash -->	
	<gap:splash src="res/screen/ios/screen-iphone-portrait-2x.png" gap:platform="ios" width="320" height="480" />

</widget>